@page
@model TeeTime.Pages.TeeSheet.IndexModel
@{
    ViewData["Title"] = "Tee Sheet";
}

<h1>Tee Sheet</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New</a>
</p>

<div class="row">
    <div class="col-md-4">
        <form method="get">
            <div class="form-group">
                <label asp-for="SelectedDate" class="control-label"></label>
                <input asp-for="SelectedDate" class="form-control" type="date" />
            </div>
            <div class="form-group">
                <input type="submit" value="Filter" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@if (Model.TeeSheet != null)
{
    <div class="card mt-4">
        <div class="card-header">
            <h3>@Model.TeeSheet.Date.ToShortDateString()</h3>
        </div>
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th>Time</th>
                        <th>Status</th>
                        <th>Reservation</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var teeTime in Model.TeeTimes)
                    {
                        <tr>
                            <td>@teeTime.StartTime.ToShortTimeString()</td>
                            <td>@(teeTime.IsAvailable ? "Available" : "Reserved")</td>
                            <td>@(teeTime.ReservationId.HasValue ? teeTime.ReservationId.Value.ToString() : "-")</td>
                            <td>
                                <a asp-page="./Edit" asp-route-id="@teeTime.Id" class="btn btn-sm btn-warning">Edit</a>
                                <a asp-page="./Details" asp-route-id="@teeTime.Id" class="btn btn-sm btn-info">Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="alert alert-info mt-4">
        No tee sheet available for the selected date.
    </div>
}
