@page
@model TeeTime.Pages.TeeSheet.ManageModel
@{
    ViewData["Title"] = "Manage Tee Sheets";
}

<div class="container">
    <h2 class="mb-4">Tee Sheet Management</h2>
    
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Generate Tee Sheet</h5>
                </div>
                <div class="card-body">
                    <form method="post" name="generateForm">
                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success mb-3">
                                @TempData["SuccessMessage"]
                            </div>
                        }
                        @if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger mb-3">
                                @TempData["ErrorMessage"]
                            </div>
                        }
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="StartDate" class="control-label">Week Start Date (Sunday)</label>
                                    <input asp-for="StartDate" type="date" class="form-control" />
                                    <span asp-validation-for="StartDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Interval" class="control-label">Interval (minutes)</label>
                                    <input asp-for="Interval" type="number" class="form-control" min="8" max="15" step="1" />
                                    <span asp-validation-for="Interval" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-12">
                                <p class="form-text text-muted">
                                    Tee times will be generated from 7:00 AM to 6:00 PM for each day of the week starting from the selected date.
                                </p>
                            </div>
                        </div>
                        <button type="submit" asp-page-handler="Generate" class="btn btn-primary">Generate Tee Sheet</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    
    @if (Model.WeekStartDate.HasValue)
    {
        <div class="row mb-4">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">Special Events / Tournaments</h5>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <input type="hidden" name="selectedWeekStart" value="@Model.WeekStartDate" />
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="form-group mb-3">
                                        <label asp-for="EventDate" class="control-label">Event Date</label>
                                        <input asp-for="EventDate" type="date" class="form-control" min="@Model.WeekStartDate.Value.ToString("yyyy-MM-dd")" max="@Model.WeekStartDate.Value.AddDays(6).ToString("yyyy-MM-dd")" id="eventDate" />
                                        <span asp-validation-for="EventDate" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group mb-3">
                                        <label asp-for="EventName" class="control-label">Event Name</label>
                                        <input asp-for="EventName" type="text" class="form-control" />
                                        <span asp-validation-for="EventName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group mb-3">
                                        <label for="SelectedStartTime" class="control-label">Start Time</label>
                                        <select asp-for="SelectedStartTime" class="form-control" id="startTimeDropdown">
                                            <option value="">-- Select Start Time --</option>
                                        </select>
                                        <span asp-validation-for="SelectedStartTime" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group mb-3">
                                        <label for="SelectedEndTime" class="control-label">End Time</label>
                                        <select asp-for="SelectedEndTime" class="form-control" id="endTimeDropdown">
                                            <option value="">-- Select End Time --</option>
                                        </select>
                                        <span asp-validation-for="SelectedEndTime" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" asp-page-handler="AddEvent" class="btn btn-success">Add Event</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="card mb-4">
            <div class="card-header">
                <ul class="nav nav-tabs card-header-tabs" id="teeSheetTabs" role="tablist">
                    @for (int i = 0; i < 7; i++)
                    {
                        var date = Model.WeekStartDate.Value.AddDays(i);
                        var dayName = date.DayOfWeek.ToString();
                        var isActive = i == 0 ? "active" : "";
                        
                        <li class="nav-item" role="presentation">
                            <button class="nav-link @isActive" id="@dayName-tab" data-bs-toggle="tab" 
                                    data-bs-target="#@dayName" type="button" role="tab" 
                                    aria-controls="@dayName" aria-selected="@(i == 0 ? "true" : "false")">
                                @dayName<br/>@date.ToString("MM/dd")
                            </button>
                        </li>
                    }
                </ul>
            </div>
            <div class="card-body">
                <div class="tab-content" id="teeSheetTabContent">
                    @for (int i = 0; i < 7; i++)
                    {
                        var date = Model.WeekStartDate.Value.AddDays(i);
                        var dayName = date.DayOfWeek.ToString();
                        var isActive = i == 0 ? "active" : "";
                        
                        <div class="tab-pane fade show @isActive" id="@dayName" role="tabpanel" aria-labelledby="@dayName-tab">
                            <h4>@dayName - @date.ToString("MMMM d, yyyy")</h4>
                            
                            @if (Model.TeeSheets.TryGetValue(date.Date, out var teeTimesForDay))
                            {
                                <div class="table-responsive">
                                    <table class="table table-striped table-hover">
                                        <thead>
                                            <tr>
                                                <th>Time</th>
                                                <th>Status</th>
                                                <th>Special Event/Tournament</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var teeTime in teeTimesForDay.OrderBy(t => t.ScheduledTime))
                                            {
                                                <tr>
                                                    <td>@teeTime.ScheduledTime.Hours.ToString("00"):@teeTime.ScheduledTime.Minutes.ToString("00")</td>
                                                    <td>
                                                        @if (teeTime.IsAvailable)
                                                        {
                                                            <span class="badge bg-success">Available</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge bg-danger">Blocked</span>
                                                        }
                                                    </td>
                                                    <td>
                                                        @if (!teeTime.IsAvailable)
                                                        {
                                                            <span>@(Model.Events.TryGetValue(teeTime.ScheduledGolfTimeID, out var eventName) ? eventName : "Blocked")</span>
                                                        }
                                                    </td>
                                                    <td>
                                                        <form method="post" class="d-inline">
                                                            <input type="hidden" name="TeeTimeId" value="@teeTime.ScheduledGolfTimeID" />
                                                            @if (teeTime.IsAvailable)
                                                            {
                                                                <button type="submit" asp-page-handler="Block" class="btn btn-sm btn-warning">Block</button>
                                                            }
                                                            else
                                                            {
                                                                <button type="submit" asp-page-handler="Unblock" class="btn btn-sm btn-success">Unblock</button>
                                                            }
                                                        </form>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-info">
                                    No tee times have been generated for this day.
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col-12 text-center">
                <form method="post">
                    <input type="hidden" name="startDate" value="@Model.WeekStartDate.Value.ToString("yyyy-MM-dd")" />
                    <button type="submit" asp-page-handler="Publish" class="btn btn-lg btn-primary">Publish Tee Sheet</button>
                    <p class="text-muted mt-2">Publishing will make these tee times available for member booking.</p>
                </form>
            </div>
        </div>
    }
    
    @if (Model.PublishedWeeks.Any())
    {
        <div class="card mt-4">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">Published Tee Sheets</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Week Starting</th>
                                <th>Number of Tee Times</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var week in Model.PublishedWeeks)
                            {
                                <tr>
                                    <td>@week.StartDate.ToString("MMMM d, yyyy")</td>
                                    <td>@week.TeeTimeCount</td>
                                    <td>
                                        <div class="d-flex">
                                            <a class="btn btn-sm btn-primary me-2" asp-page="./View" asp-route-startDate="@week.StartDate.ToString("yyyy-MM-dd")">View</a>
                                            <a class="btn btn-sm btn-danger delete-teesheet" href="#" 
                                               data-bs-toggle="modal" 
                                               data-bs-target="#deleteTeesheetModal" 
                                               data-start-date="@week.StartDate.ToString("yyyy-MM-dd")"
                                               data-week-display="@week.StartDate.ToString("MMMM d, yyyy")">Delete</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

<!-- Delete Teesheet Confirmation Modal -->
<div class="modal fade" id="deleteTeesheetModal" tabindex="-1" aria-labelledby="deleteTeesheetModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteTeesheetModalLabel">Confirm Delete</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>Are you sure you want to delete the tee sheet for the week of <span id="deleteWeekDisplay"></span>?</p>
        <div class="alert alert-danger">
          <i class="bi bi-exclamation-triangle-fill"></i> This will permanently delete all tee times and reservations for this week. This action cannot be undone.
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <form method="post">
          <input type="hidden" id="deleteStartDate" name="startDate" />
          <button type="submit" class="btn btn-danger" asp-page-handler="DeleteTeeSheet">Delete Tee Sheet</button>
        </form>
      </div>
    </div>
  </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        $(document).ready(function() {
            // Function to load available times for a selected date
            function loadAvailableTimes() {
                const selectedDate = $('#eventDate').val();
                if (!selectedDate) return;
                
                $.ajax({
                    url: '?handler=AvailableTimes',
                    data: { date: selectedDate },
                    type: 'GET',
                    contentType: 'application/json',
                    success: function(data) {
                        const startDropdown = $('#startTimeDropdown');
                        const endDropdown = $('#endTimeDropdown');
                        
                        // Clear existing options
                        startDropdown.empty();
                        endDropdown.empty();
                        
                        // Add default option
                        startDropdown.append($('<option>', {
                            value: '',
                            text: '-- Select Start Time --'
                        }));
                        
                        endDropdown.append($('<option>', {
                            value: '',
                            text: '-- Select End Time --'
                        }));
                        
                        // Add time options
                        if (data && data.length > 0) {
                            $.each(data, function(i, time) {
                                startDropdown.append($('<option>', {
                                    value: time.time,
                                    text: time.time
                                }));
                                
                                endDropdown.append($('<option>', {
                                    value: time.time,
                                    text: time.time
                                }));
                            });
                        } else {
                            startDropdown.append($('<option>', {
                                value: '',
                                text: 'No available times'
                            }));
                            
                            endDropdown.append($('<option>', {
                                value: '',
                                text: 'No available times'
                            }));
                        }
                    },
                    error: function() {
                        alert('Error loading available times. Please try again.');
                    }
                });
            }
            
            // Initialize on page load if date is already selected
            if ($('#eventDate').val()) {
                loadAvailableTimes();
            }
            
            // Load available times when date changes
            $('#eventDate').on('change', loadAvailableTimes);
            
            // Validation for end time after start time
            $('#startTimeDropdown, #endTimeDropdown').on('change', function() {
                const startTime = $('#startTimeDropdown').val();
                const endTime = $('#endTimeDropdown').val();
                
                if (startTime && endTime && startTime >= endTime) {
                    alert('End time must be after start time.');
                    $('#endTimeDropdown').val('');
                }
            });
            
            // Set up delete teesheet modal
            $('.delete-teesheet').click(function() {
                var startDate = $(this).data('start-date');
                var weekDisplay = $(this).data('week-display');
                
                $('#deleteStartDate').val(startDate);
                $('#deleteWeekDisplay').text(weekDisplay);
            });
        });
    </script>
}
