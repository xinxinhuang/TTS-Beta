@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="container">
    <div class="row align-items-center mb-5">
        <div class="col-md-6">
            <h1 class="display-4 fw-bold">Welcome to TeeTime Golf Club</h1>
            <p class="lead">Experience the finest golfing in a beautiful setting with our premium facilities and exclusive membership benefits.</p>
            <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                @if (User.Identity != null && User.Identity.IsAuthenticated)
                {
                    <a asp-page="/Dashboard" class="btn btn-primary btn-lg px-4">Go to Dashboard</a>
                }
                else
                {
                    <a asp-page="/Account/Register" class="btn btn-primary btn-lg px-4 me-md-2">Join Now</a>
                    <a asp-page="/Account/Login" class="btn btn-outline-secondary btn-lg px-4">Sign In</a>
                }
            </div>
        </div>
        <div class="col-md-6">
            <img src="https://images.unsplash.com/photo-1587174486073-ae5e5cff23aa?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1170&q=80" class="img-fluid rounded shadow" alt="Golf Course">
        </div>
    </div>

    <div class="row mb-5">
        <div class="col-md-12 text-center">
            <h2 class="mb-4">Membership Levels</h2>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card h-100">
                <div class="card-header bg-warning text-white text-center">
                    <h3>Gold</h3>
                </div>
                <div class="card-body d-flex flex-column">
                    <ul class="list-unstyled">
                        <li><i class="bi bi-check-circle-fill text-success me-2"></i>Book Tee Times</li>
                        <li><i class="bi bi-check-circle-fill text-success me-2"></i>Can Sponsor New Members</li>
                        <li><i class="bi bi-check-circle-fill text-success me-2"></i>Standing Tee Time Requests</li>
                        <li><i class="bi bi-check-circle-fill text-success me-2"></i>Eligible for Upgrade</li>
                    </ul>
                    <div class="mt-auto text-center">
                        <a asp-page="/Account/Register" class="btn btn-warning">Join Now</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card h-100">
                <div class="card-header bg-secondary text-white text-center">
                    <h3>Silver</h3>
                </div>
                <div class="card-body d-flex flex-column">
                    <ul class="list-unstyled">
                        <li><i class="bi bi-check-circle-fill text-success me-2"></i>Book Tee Times</li>
                        <li><i class="bi bi-x-circle-fill text-danger me-2"></i>Cannot Sponsor</li>
                        <li><i class="bi bi-x-circle-fill text-danger me-2"></i>No Standing Tee Times</li>
                        <li><i class="bi bi-x-circle-fill text-danger me-2"></i>Not Eligible for Upgrade</li>
                    </ul>
                    <div class="mt-auto text-center">
                        <a asp-page="/Account/Register" class="btn btn-secondary">Join Now</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card h-100">
                <div class="card-header bg-info text-white text-center">
                    <h3>Bronze</h3>
                </div>
                <div class="card-body d-flex flex-column">
                    <ul class="list-unstyled">
                        <li><i class="bi bi-check-circle-fill text-success me-2"></i>Book Tee Times</li>
                        <li><i class="bi bi-x-circle-fill text-danger me-2"></i>Cannot Sponsor</li>
                        <li><i class="bi bi-x-circle-fill text-danger me-2"></i>No Standing Tee Times</li>
                        <li><i class="bi bi-x-circle-fill text-danger me-2"></i>Not Eligible for Upgrade</li>
                    </ul>
                    <div class="mt-auto text-center">
                        <a asp-page="/Account/Register" class="btn btn-info">Join Now</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card h-100">
                <div class="card-header bg-dark text-white text-center">
                    <h3>Copper</h3>
                </div>
                <div class="card-body d-flex flex-column">
                    <ul class="list-unstyled">
                        <li><i class="bi bi-x-circle-fill text-danger me-2"></i>Cannot Book Tee Times</li>
                        <li><i class="bi bi-x-circle-fill text-danger me-2"></i>Cannot Sponsor</li>
                        <li><i class="bi bi-x-circle-fill text-danger me-2"></i>No Standing Tee Times</li>
                        <li><i class="bi bi-x-circle-fill text-danger me-2"></i>Not Eligible for Upgrade</li>
                    </ul>
                    <div class="mt-auto text-center">
                        <a asp-page="/Account/Register" class="btn btn-dark">Join Now</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
