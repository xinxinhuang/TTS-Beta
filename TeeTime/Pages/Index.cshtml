@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="container d-flex align-items-center justify-content-center" style="min-height: 80vh;">
    <div class="row justify-content-center w-100">
        <div class="col-md-6 text-center">
            <h1 class="display-4 fw-bold mb-4 fascinate-regular">TeeTime</h1>
            <div class="d-grid gap-3 justify-content-center">
                @if (User.Identity != null && User.Identity.IsAuthenticated)
                {
                    <a asp-page="/Dashboard" class="btn btn-outline-secondary px-4" style="color: #000000;">Go to Dashboard</a>
                }
                else
                {
                    <a asp-page="/Account/Login" class="btn btn-outline-secondary px-4" style="color: #000000;">Sign In</a>
                }
            </div>
        </div>
    </div>
</div>
