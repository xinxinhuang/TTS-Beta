@page
@model TeeTime.Pages.DashboardModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2>Welcome, @Model.UserFullName!</h2>
                    <p class="mb-0">Membership Level: <span class="badge bg-info">@Model.MembershipLevel</span></p>
                </div>
                <div class="card-body">
                    <div class="row">
                        @if (Model.CanBookTeeTime)
                        {
                            <div class="col-md-4 mb-3">
                                <div class="card h-100">
                                    <div class="card-body text-center">
                                        <i class="bi bi-calendar-check" style="font-size: 3rem; color: #0d6efd;"></i>
                                        <h4 class="mt-3">Book Tee Time</h4>
                                        <p>Schedule your next golf session</p>
                                        <a href="#" class="btn btn-primary">Book Now</a>
                                    </div>
                                </div>
                            </div>
                        }

                        @if (Model.CanRequestStandingTeeTime)
                        {
                            <div class="col-md-4 mb-3">
                                <div class="card h-100">
                                    <div class="card-body text-center">
                                        <i class="bi bi-calendar-week" style="font-size: 3rem; color: #0d6efd;"></i>
                                        <h4 class="mt-3">Standing Tee Time</h4>
                                        <p>Request a regular tee time slot</p>
                                        <a href="#" class="btn btn-primary">Request</a>
                                    </div>
                                </div>
                            </div>
                        }

                        @if (Model.CanApplyForUpgrade && Model.MembershipLevel == "Gold")
                        {
                            <div class="col-md-4 mb-3">
                                <div class="card h-100">
                                    <div class="card-body text-center">
                                        <i class="bi bi-arrow-up-circle" style="font-size: 3rem; color: #0d6efd;"></i>
                                        <h4 class="mt-3">Membership Upgrade</h4>
                                        <p>Apply for Shareholder/Associate status</p>
                                        <a href="#" class="btn btn-primary">Apply Now</a>
                                    </div>
                                </div>
                            </div>
                        }

                        <div class="col-md-4 mb-3">
                            <div class="card h-100">
                                <div class="card-body text-center">
                                    <i class="bi bi-person-circle" style="font-size: 3rem; color: #0d6efd;"></i>
                                    <h4 class="mt-3">My Profile</h4>
                                    <p>View and update your information</p>
                                    <a href="#" class="btn btn-primary">View Profile</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
