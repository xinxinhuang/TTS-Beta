@page
@model TeeTime.Pages.TeeTimeBookTeeTimeModel
@{
    ViewData["Title"] = "Book Tee Time";
}

<div class="container">
    <h2 class="mb-4">Book a Tee Time</h2>
    
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Select a Date</h5>
                </div>
                <div class="card-body">
                    <form method="post" asp-page-handler="DateSelected">
                        <div class="form-group">
                            <label asp-for="SelectedDate" class="control-label">Date</label>
                            <input asp-for="SelectedDate" type="date" class="form-control" min="@Model.MinDate.ToString("yyyy-MM-dd")" max="@Model.MaxDate.ToString("yyyy-MM-dd")" />
                            <span asp-validation-for="SelectedDate" class="text-danger"></span>
                            <div class="small text-muted mt-1">
                                <i class="bi bi-info-circle"></i> Select a date to check tee time availability.
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary mt-3">Check Available Times</button>
                    </form>
                </div>
            </div>
        </div>
        
        @if (Model.DateSelected)
        {
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">Available Tee Times for @Model.SelectedDate.ToShortDateString()</h5>
                    </div>
                    <div class="card-body">
                        @if (Model.AvailableTimes.Count == 0)
                        {
                            <div class="alert alert-warning">
                                No tee times are available for the selected date. Please select another date.
                            </div>
                        }
                        else
                        {
                            <form method="post" asp-page-handler="BookTimeAsync" id="bookTeeTimeForm">
                                <input type="hidden" asp-for="SelectedDate" />
                                
                                <div class="form-group mb-3">
                                    <label asp-for="SelectedTimeId" class="control-label">Tee Time</label>
                                    <select asp-for="SelectedTimeId" class="form-control" id="teeTimeSelect">
                                        <option value="">Select a time...</option>
                                        @foreach (var time in Model.AvailableTimes)
                                        {
                                            var displayHour = time.ScheduledTime.Hours > 12 ? time.ScheduledTime.Hours - 12 : (time.ScheduledTime.Hours == 0 ? 12 : time.ScheduledTime.Hours);
                                            <option value="@time.ScheduledGolfTimeID">@(displayHour.ToString("00")):@(time.ScheduledTime.Minutes.ToString("00")) @(time.ScheduledTime.Hours >= 12 ? "PM" : "AM")</option>
                                        }
                                    </select>
                                    <span asp-validation-for="SelectedTimeId" class="text-danger"></span>
                                </div>
                                
                                <div class="form-group mb-3">
                                    <label asp-for="NumberOfPlayers" class="control-label">Number of Players</label>
                                    <select asp-for="NumberOfPlayers" class="form-control" id="numberOfPlayers">
                                        <option value="1">1</option>
                                        <option value="2">2</option>
                                        <option value="3">3</option>
                                        <option value="4">4</option>
                                    </select>
                                    <span asp-validation-for="NumberOfPlayers" class="text-danger"></span>
                                </div>
                                
                                <div class="form-group mb-3">
                                    <label asp-for="NumberOfCarts" class="control-label">Number of Carts</label>
                                    <select asp-for="NumberOfCarts" class="form-control" id="numberOfCarts">
                                        <option value="0">None</option>
                                        <option value="1">1</option>
                                        <option value="2">2</option>
                                    </select>
                                    <span asp-validation-for="NumberOfCarts" class="text-danger"></span>
                                </div>
                                
                                <button type="submit" class="btn btn-success">Book Tee Time</button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
    
    @if (Model.BookingConfirmed)
    {
        <div class="row mt-4">
            <div class="col-12">
                <div class="alert alert-success">
                    <h4>Booking Confirmed!</h4>
                    <p>Your tee time has been booked for @Model.SelectedDate.ToShortDateString() at 
                        @{
                            var displayHour = Model.ConfirmedTime.Hours > 12 ? Model.ConfirmedTime.Hours - 12 : (Model.ConfirmedTime.Hours == 0 ? 12 : Model.ConfirmedTime.Hours);
                            @Html.Raw($"{displayHour:D2}:{Model.ConfirmedTime.Minutes:D2} {(Model.ConfirmedTime.Hours >= 12 ? "PM" : "AM")}");
                        }
                    </p>
                    <p>Confirmation #: @Model.ConfirmationNumber</p>
                    <p>Players: @Model.NumberOfPlayers | Carts: @Model.NumberOfCarts</p>
                </div>
            </div>
        </div>
    }
    
    <!-- Your Reservations Section -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Your Upcoming Tee Times</h5>
                </div>
                <div class="card-body">
                    @if (Model.UserReservations.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Time</th>
                                        <th>Players</th>
                                        <th>Carts</th>
                                        <th>Confirmation #</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var reservation in Model.UserReservations)
                                    {
                                        <tr>
                                            <td>@reservation.ScheduledGolfTime.ScheduledDate.ToShortDateString()</td>
                                            <td>
                                                @{
                                                    var time = reservation.ScheduledGolfTime.ScheduledTime;
                                                    var displayHour = time.Hours > 12 ? time.Hours - 12 : (time.Hours == 0 ? 12 : time.Hours);
                                                    @Html.Raw($"{displayHour:D2}:{time.Minutes:D2} {(time.Hours >= 12 ? "PM" : "AM")}");
                                                }
                                            </td>
                                            <td>@reservation.NumberOfPlayers</td>
                                            <td>@reservation.NumberOfCarts</td>
                                            <td>TT@(reservation.ReservationID.ToString("D6"))</td>
                                            <td>@reservation.ReservationStatus</td>
                                            <td>
                                                @if (reservation.ReservationStatus == "Confirmed" && 
                                                    reservation.ScheduledGolfTime.ScheduledDate > DateTime.Today)
                                                {
                                                    <form method="post" asp-page-handler="CancelReservation" onsubmit="return confirm('Are you sure you want to cancel this reservation?');">
                                                        <input type="hidden" name="ReservationToCancel" value="@reservation.ReservationID" />
                                                        <button type="submit" class="btn btn-sm btn-danger">Cancel</button>
                                                    </form>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">No actions available</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            You don't have any upcoming tee times. Use the form above to book one!
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Handle cart logic based on number of players
        $(document).ready(function() {
            // Update cart options when number of players changes
            $('#numberOfPlayers').change(function() {
                updateCartOptions();
            });
            
            // Initial setup
            updateCartOptions();
            
            function updateCartOptions() {
                var players = parseInt($('#numberOfPlayers').val());
                var cartSelect = $('#numberOfCarts');
                var currentCarts = parseInt(cartSelect.val());
                
                // Clear existing options
                cartSelect.empty();
                
                // Add "None" option
                cartSelect.append($('<option>', {
                    value: 0,
                    text: 'None'
                }));
                
                // Calculate max carts (1 cart per 2 players, rounding up)
                var maxCarts = Math.ceil(players / 2);
                
                // Add options for each possible cart
                for (var i = 1; i <= maxCarts; i++) {
                    cartSelect.append($('<option>', {
                        value: i,
                        text: i.toString()
                    }));
                }
                
                // Set current value if possible, otherwise set to max
                if (currentCarts <= maxCarts) {
                    cartSelect.val(currentCarts);
                } else {
                    cartSelect.val(maxCarts);
                }
            }
        });
    </script>
    <style>
        /* Date picker styling */
        .date-unavailable {
            background-color: #f8d7da !important;
            color: #999 !important;
            text-decoration: line-through !important;
            pointer-events: none !important;
        }
        
        .date-limited {
            background-color: #fff3cd !important;
        }
    </style>
}
