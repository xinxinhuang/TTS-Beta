@page
@model TeeTime.Pages.TeeTimeBookTeeTimeModel
@{
    ViewData["Title"] = "Book Tee Time";
}

<style>
    .tee-time-available {
        background-color: rgba(25, 135, 84, 0.1);
    }
    
    .tee-time-booked {
        background-color: rgba(220, 53, 69, 0.1);
    }
    
    .tee-time-event {
        background-color: rgba(255, 193, 7, 0.1);
    }
    
    .tee-time-your-booking {
        background-color: rgba(13, 110, 253, 0.1);
        font-weight: bold;
    }
    
    .booking-form {
        display: none;
    }
    
    .booking-form.show {
        display: block;
    }
</style>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Tee Times - Week of @Model.StartDate.ToString("MMMM d, yyyy")</h2>
        <div>
            <a asp-page="./BookTeeTime" asp-route-startDate="@Model.StartDate.AddDays(-7).ToString("yyyy-MM-dd")" class="btn btn-outline-primary me-2">
                <i class="bi bi-arrow-left"></i> Previous Week
            </a>
            <a asp-page="./BookTeeTime" asp-route-startDate="@Model.StartDate.AddDays(7).ToString("yyyy-MM-dd")" class="btn btn-outline-primary">
                Next Week <i class="bi bi-arrow-right"></i>
            </a>
        </div>
    </div>
    
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    @if (Model.BookingConfirmed)
    {
        <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
            <h4>Booking Confirmed!</h4>
            <p>Your tee time has been booked for @Model.SelectedDate.ToShortDateString() at 
                @{
                    var displayHour = Model.ConfirmedTime.Hours > 12 ? Model.ConfirmedTime.Hours - 12 : (Model.ConfirmedTime.Hours == 0 ? 12 : Model.ConfirmedTime.Hours);
                    @Html.Raw($"{displayHour:D2}:{Model.ConfirmedTime.Minutes:D2} {(Model.ConfirmedTime.Hours >= 12 ? "PM" : "AM")}");
                }
            </p>
            <p>Confirmation #: @Model.ConfirmationNumber</p>
            <p>Players: @Model.NumberOfPlayers | Carts: @Model.NumberOfCarts</p>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    <!-- Booking Form Modal -->
    <div class="modal fade" id="bookingModal" tabindex="-1" aria-labelledby="bookingModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="bookingModalLabel">Book Tee Time</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form method="post" asp-page-handler="BookTimeAsync" id="bookTeeTimeForm">
                        <input type="hidden" asp-for="SelectedDate" id="selectedDate" />
                        <input type="hidden" asp-for="SelectedTimeId" id="selectedTimeId" />
                        
                        <div class="mb-3">
                            <p><strong>Date:</strong> <span id="bookingDate"></span></p>
                            <p><strong>Time:</strong> <span id="bookingTime"></span></p>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="NumberOfPlayers" class="control-label">Number of Players</label>
                            <select asp-for="NumberOfPlayers" class="form-control">
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                            </select>
                            <span asp-validation-for="NumberOfPlayers" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="NumberOfCarts" class="control-label">Number of Carts</label>
                            <select asp-for="NumberOfCarts" class="form-control">
                                <option value="0">None</option>
                                <option value="1">1</option>
                                <option value="2">2</option>
                            </select>
                            <span asp-validation-for="NumberOfCarts" class="text-danger"></span>
                        </div>
                        
                        <div class="d-grid">
                            <button type="submit" class="btn btn-success">Book Tee Time</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Tee Sheet Tabs -->
    <div class="card">
        <div class="card-header">
            <ul class="nav nav-tabs card-header-tabs" id="teeSheetTabs" role="tablist">
                @for (int i = 0; i < 7; i++)
                {
                    var date = Model.StartDate.AddDays(i);
                    var dayName = date.DayOfWeek.ToString();
                    var isActive = i == 0 ? "active" : "";
                    
                    <li class="nav-item" role="presentation">
                        <button class="nav-link @isActive" id="@dayName-tab" data-bs-toggle="tab" data-bs-target="#@dayName" 
                                type="button" role="tab" aria-controls="@dayName" aria-selected="@(i == 0 ? "true" : "false")"
                                data-date="@date.ToString("yyyy-MM-dd")">
                            @dayName<br />@date.ToString("MM/dd")
                        </button>
                    </li>
                }
            </ul>
        </div>
        <div class="card-body">
            <div class="tab-content" id="teeSheetTabContent">
                @for (int i = 0; i < 7; i++)
                {
                    var date = Model.StartDate.AddDays(i);
                    var dayName = date.DayOfWeek.ToString();
                    var isActive = i == 0 ? "active" : "";
                    
                    <div class="tab-pane fade show @isActive" id="@dayName" role="tabpanel" aria-labelledby="@dayName-tab">
                        <h4>@dayName - @date.ToString("MMMM d, yyyy")</h4>
                        
                        @if (Model.TeeSheets.TryGetValue(date.Date, out var teeTimesForDay))
                        {
                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th>Time</th>
                                            <th>Status</th>
                                            @if (User.IsInRole("Clerk") || User.IsInRole("Pro Shop Staff") || User.IsInRole("Admin"))
                                            {
                                                <th>Member</th>
                                            }
                                            <th>Players</th>
                                            <th>Carts</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var teeTime in teeTimesForDay.OrderBy(t => t.ScheduledTime))
                                        {
                                            var displayHour = teeTime.ScheduledTime.Hours > 12 ? teeTime.ScheduledTime.Hours - 12 : (teeTime.ScheduledTime.Hours == 0 ? 12 : teeTime.ScheduledTime.Hours);
                                            var timeDisplay = $"{displayHour:D2}:{teeTime.ScheduledTime.Minutes:D2} {(teeTime.ScheduledTime.Hours >= 12 ? "PM" : "AM")}";
                                            
                                            var reservation = teeTime.Reservations.FirstOrDefault();
                                            var isYourBooking = reservation != null && Model.UserReservations.Any(r => r.ReservationID == reservation.ReservationID);
                                            var rowClass = "";
                                            
                                            if (teeTime.EventID.HasValue)
                                            {
                                                rowClass = "tee-time-event";
                                            }
                                            else if (isYourBooking)
                                            {
                                                rowClass = "tee-time-your-booking";
                                            }
                                            else if (!teeTime.IsAvailable)
                                            {
                                                rowClass = "tee-time-booked";
                                            }
                                            else if (teeTime.IsAvailable)
                                            {
                                                rowClass = "tee-time-available";
                                            }
                                            
                                            <tr class="@rowClass">
                                                <td>@timeDisplay</td>
                                                <td>
                                                    @if (teeTime.EventID.HasValue && Model.Events.TryGetValue(teeTime.ScheduledGolfTimeID, out var eventName))
                                                    {
                                                        <span class="badge bg-warning">@eventName</span>
                                                    }
                                                    else if (isYourBooking)
                                                    {
                                                        <span class="badge bg-primary">Your Booking</span>
                                                    }
                                                    else if (!teeTime.IsAvailable)
                                                    {
                                                        <span class="badge bg-danger">Booked</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-success">Available</span>
                                                    }
                                                </td>
                                                @if (User.IsInRole("Clerk") || User.IsInRole("Pro Shop Staff") || User.IsInRole("Admin"))
                                                {
                                                    <td>
                                                        @if (reservation != null && reservation.Member?.User != null)
                                                        {
                                                            @($"{reservation.Member.User.FirstName} {reservation.Member.User.LastName}")
                                                        }
                                                        else
                                                        {
                                                            <span>-</span>
                                                        }
                                                    </td>
                                                }
                                                <td>
                                                    @if (reservation != null)
                                                    {
                                                        @reservation.NumberOfPlayers
                                                    }
                                                    else
                                                    {
                                                        <span>-</span>
                                                    }
                                                </td>
                                                <td>
                                                    @if (reservation != null)
                                                    {
                                                        @reservation.NumberOfCarts
                                                    }
                                                    else
                                                    {
                                                        <span>-</span>
                                                    }
                                                </td>
                                                <td>
                                                    @if (teeTime.IsAvailable)
                                                    {
                                                        <button type="button" class="btn btn-sm btn-success book-button" 
                                                                data-bs-toggle="modal" data-bs-target="#bookingModal"
                                                                data-time-id="@teeTime.ScheduledGolfTimeID"
                                                                data-date="@teeTime.ScheduledDate.ToString("yyyy-MM-dd")"
                                                                data-time="@timeDisplay">
                                                            Book
                                                        </button>
                                                    }
                                                    else if (isYourBooking)
                                                    {
                                                        <form method="post" asp-page-handler="CancelReservation" onsubmit="return confirm('Are you sure you want to cancel this reservation?');">
                                                            <input type="hidden" name="ReservationToCancel" value="@(reservation?.ReservationID)" />
                                                            <input type="hidden" name="startDate" value="@(Model.StartDate.ToString("yyyy-MM-dd"))" />
                                                            <button type="submit" class="btn btn-sm btn-danger">Cancel</button>
                                                        </form>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info">
                                No tee times have been generated for this day.
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
    
    <!-- Your Reservations Section -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Your Upcoming Tee Times</h5>
                </div>
                <div class="card-body">
                    @if (Model.UserReservations.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Time</th>
                                        <th>Players</th>
                                        <th>Carts</th>
                                        <th>Confirmation #</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var reservation in Model.UserReservations)
                                    {
                                        <tr>
                                            <td>@(reservation.ScheduledGolfTime?.ScheduledDate.ToShortDateString() ?? "N/A")</td>
                                            <td>
                                                @{
                                                    if (reservation.ScheduledGolfTime != null)
                                                    {
                                                        var time = reservation.ScheduledGolfTime.ScheduledTime;
                                                        var displayHour = time.Hours > 12 ? time.Hours - 12 : (time.Hours == 0 ? 12 : time.Hours);
                                                        @Html.Raw($"{displayHour:D2}:{time.Minutes:D2} {(time.Hours >= 12 ? "PM" : "AM")}");
                                                    }
                                                    else
                                                    {
                                                        @Html.Raw("N/A");
                                                    }
                                                }
                                            </td>
                                            <td>@reservation.NumberOfPlayers</td>
                                            <td>@reservation.NumberOfCarts</td>
                                            <td>TT@(reservation.ReservationID.ToString("D6"))</td>
                                            <td>@reservation.ReservationStatus</td>
                                            <td>
                                                @if (reservation.ReservationStatus == "Confirmed" && 
                                                    reservation.ScheduledGolfTime?.ScheduledDate > DateTime.Today)
                                                {
                                                    <form method="post" asp-page-handler="CancelReservation" onsubmit="return confirm('Are you sure you want to cancel this reservation?');">
                                                        <input type="hidden" name="ReservationToCancel" value="@reservation.ReservationID" />
                                                        <input type="hidden" name="startDate" value="@(Model.StartDate.ToString("yyyy-MM-dd"))" />
                                                        <button type="submit" class="btn btn-sm btn-danger">Cancel</button>
                                                    </form>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            You don't have any upcoming tee times.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Handle booking button clicks
            $('.book-button').click(function() {
                var timeId = $(this).data('time-id');
                var date = $(this).data('date');
                var time = $(this).data('time');
                
                $('#selectedTimeId').val(timeId);
                $('#selectedDate').val(date);
                $('#bookingDate').text(date);
                $('#bookingTime').text(time);
                
                $('#bookingModal').modal('show');
            });
            
            // Initialize tabs
            var triggerTabList = [].slice.call(document.querySelectorAll('#teeSheetTabs button'))
            triggerTabList.forEach(function (triggerEl) {
                var tabTrigger = new bootstrap.Tab(triggerEl)
                
                triggerEl.addEventListener('click', function (event) {
                    event.preventDefault()
                    tabTrigger.show()
                })
            });
        });
    </script>
}
