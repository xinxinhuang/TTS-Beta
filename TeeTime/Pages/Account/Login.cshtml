@page
@model TeeTime.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="container d-flex align-items-center justify-content-center" style="min-height: 80vh;">
    <div class="row justify-content-center w-100">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h2 class="text-center">TeeTime Login</h2>
                </div>
                <div class="card-body" style="background-color: #f8f9fa;">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group mb-3">
                            <label asp-for="LoginInput.Email" class="form-label"></label>
                            <input asp-for="LoginInput.Email" class="form-control" />
                            <span asp-validation-for="LoginInput.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="LoginInput.Password" class="form-label"></label>
                            <input asp-for="LoginInput.Password" class="form-control" />
                            <span asp-validation-for="LoginInput.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <div class="form-check">
                                <input asp-for="LoginInput.RememberMe" class="form-check-input" />
                                <label asp-for="LoginInput.RememberMe" class="form-check-label"></label>
                            </div>
                        </div>
                        <div class="form-group d-grid">
                            <button type="submit" class="btn" style="background-color: #b4bcc2; color: #000000;">Login</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center" style="background-color: #dee2e6;">
                    <p>Don't have an account? <a asp-page="./Register" style="color: #6c757d;">Sign up</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
