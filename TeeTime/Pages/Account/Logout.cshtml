@page
@model TeeTime.Pages.Account.LogoutModel
@{
    ViewData["Title"] = "Logout";
}

<div class="container d-flex align-items-center justify-content-center" style="min-height: 80vh;">
    <div class="row justify-content-center w-100">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h2 class="text-center">Log Out</h2>
                </div>
                <div class="card-body text-center" style="background-color: #f8f9fa;">
                    <p>Are you sure you want to log out?</p>
                    <form method="post">
                        <button type="submit" class="btn" style="background-color: #b4bcc2; color: #000000;">Yes, Log Out</button>
                        <a asp-page="/Dashboard" class="btn" style="background-color: #dee2e6; color: #000000;">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
